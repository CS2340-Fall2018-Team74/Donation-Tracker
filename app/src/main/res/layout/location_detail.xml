<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/location_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    tools:context=".controller.LocationDetailActivity">


    <TextView
        android:id="@+id/location_detail_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="30dp"
        android:text="@string/textView" />

    <TextView
        android:id="@+id/location_detail_street_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/location_detail_name"
        android:layout_alignParentStart="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="30dp"
        android:text="@string/textView" />

    <TextView
        android:id="@+id/location_detail_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/location_detail_street_address"
        android:layout_marginStart="60dp"
        android:layout_marginTop="30dp"
        android:text="@string/textView" />

    <TextView
        android:id="@+id/location_detail_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="129dp"
        android:layout_toEndOf="@+id/location_detail_city"
        android:text="@string/textView" />

    <TextView
        android:id="@+id/location_detail_zip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="129dp"
        android:layout_toEndOf="@+id/location_detail_state"
        android:text="@string/textView" />

    <TextView
        android:id="@+id/location_detail_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/location_detail_zip"
        android:layout_marginStart="60dp"
        android:layout_marginTop="30dp"
        android:text="@string/textView" />

    <TextView
        android:id="@+id/location_detail_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/location_detail_type"
        android:layout_alignParentStart="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="-1dp"
        android:text="@string/textView" />

    <TextView
        android:id="@+id/location_detail_website"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/location_detail_phone"
        android:layout_alignParentStart="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="30dp"
        android:text="@string/textView" />

    <Button
        android:id="@+id/location_detail_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/location_detail_inventory"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="86dp"
        android:text="@string/edit" />

    <Button
        android:id="@+id/location_detail_inventory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/location_detail_website"
        android:layout_alignParentStart="true"
        android:layout_marginStart="42dp"
        android:layout_marginTop="41dp"
        android:text="@string/inventory" />
</RelativeLayout>