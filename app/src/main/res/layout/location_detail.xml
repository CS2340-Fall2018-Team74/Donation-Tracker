<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/location_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    tools:context=".controller.LocationDetailActivity">


    <TextView
        android:id="@+id/location_detail_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:text="@string/textview" />

    <TextView
        android:id="@+id/location_detail_street_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="35dp"
        android:text="@string/textview" />

    <TextView
        android:id="@+id/location_detail_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="146dp"
        android:text="@string/textview" />

    <TextView
        android:id="@+id/location_detail_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="197dp"
        android:text="@string/textview" />

    <TextView
        android:id="@+id/location_detail_zip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="@string/textview" />

    <TextView
        android:id="@+id/location_detail_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="194dp"
        android:text="@string/textview" />

    <TextView
        android:id="@+id/location_detail_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="-1dp"
        android:layout_marginBottom="147dp"
        android:text="@string/textview" />

    <TextView
        android:id="@+id/location_detail_website"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="2dp"
        android:layout_marginBottom="84dp"
        android:text="@string/textview" />

    <Button
        android:id="@+id/location_detail_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/location_detail_website"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-84dp"
        android:layout_marginEnd="43dp"
        android:text="@string/edit" />

    <Button
        android:id="@+id/location_detail_inventory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/location_detail_website"
        android:layout_alignStart="@+id/location_detail_edit"
        android:text="@string/inventory" />
</RelativeLayout>