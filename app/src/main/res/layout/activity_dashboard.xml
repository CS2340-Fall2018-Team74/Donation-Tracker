<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    tools:context=".controller.DashboardActivity">

    <EditText
        android:id="@+id/search_item"
        android:layout_width="318dp"
        android:layout_height="wrap_content"
        android:hint="@string/enter_keyword" />

    <Button
        android:id="@+id/button_settings_DB"
        android:layout_width="100dp"
        android:layout_height="53dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="282dp"
        android:layout_marginBottom="31dp"
        android:text="@string/settings"
        android:visibility="visible" />

    <Button
        android:id="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/button_settings_DB"
        android:layout_alignParentStart="true"
        android:layout_marginStart="17dp"
        android:text="@string/location" />

    <TextView
        android:id="@+id/dashboard_account_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="134dp"
        android:layout_marginEnd="196dp"
        android:text="@string/user" />

    <CheckBox
        android:id="@+id/search_item_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="29dp"
        android:layout_marginTop="82dp"
        android:text="@string/category" />

    <CheckBox
        android:id="@+id/search_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/search_item_category"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="85dp"
        android:text="@string/name" />

    <ImageButton
        android:id="@+id/search_item_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/button_settings_DB"
        android:layout_alignParentTop="true"
        android:background="@drawable/common_google_signin_btn_icon_dark_normal_background"
        app:srcCompat="@android:drawable/ic_menu_search"
        android:contentDescription="@string/todo" />

    <Spinner
        android:id="@+id/search_location_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/search_item_button"
        android:layout_alignParentStart="true" />

</RelativeLayout>